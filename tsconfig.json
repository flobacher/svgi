{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/esm",
    "removeComments": false,
    "preserveConstEnums": true,
    "rootDir": "src",
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "es2016"
  },
  "exclude": ["node_modules", "dist", "scripts"]
}